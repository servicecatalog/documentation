                        </row>
                        <row>
                            <entry colname="col1">
                                <b>View billing systems</b></entry>
                            <entry colname="col2">Technology manager</entry>
                        </row>
                    </tbody>
                </tgroup>
            </table>
        </section>
    </refbody>
</reference>
