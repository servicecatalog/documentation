                    <tbody>
                        <row>
                            <entry colname="col1">
                                <b>Register service definition</b>
                            </entry>
                            <entry colname="col2">Technology manager</entry>
                        </row>
                        <row>
                            <entry colname="col1">
                                <b>Import service definition</b>
                            </entry>
                            <entry colname="col2">Technology manager</entry>
                        </row>
